{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Services",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "src/main/docker/services.yml", "up", "-d"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Docker Services",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "src/main/docker/services.yml", "down"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Frontend Dev Server",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Local:.*",
                    "endsPattern": ".*ready in.*"
                }
            },
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}