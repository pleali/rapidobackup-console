<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="001_create_contacts_table" author="console">
        <createTable tableName="contacts">
            <!-- Primary Key -->
            <column name="id" type="${uuidType}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Contact Information -->
            <column name="contact_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_method" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(100)"/>
            <column name="is_primary" type="boolean" defaultValueBoolean="false"/>
            <column name="is_verified" type="boolean" defaultValueBoolean="false"/>

            <!-- Contact Person Details -->
            <column name="first_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="title" type="varchar(100)"/>
            <column name="department" type="varchar(100)"/>

            <!-- Additional Info -->
            <column name="notes" type="text"/>
            <column name="extension" type="varchar(20)"/>
            <column name="country_code" type="varchar(10)"/>

            <!-- Verification -->
            <column name="verified_at" type="timestamp"/>
            <column name="verified_by" type="${uuidType}"/>

            <!-- Timestamps -->
            <column name="created_at" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="timestamp"/>

            <!-- Audit -->
            <column name="created_by" type="${uuidType}"/>
            <column name="last_modified_by" type="${uuidType}"/>
        </createTable>

        <!-- Indexes -->

        <createIndex indexName="idx_contacts_type" tableName="contacts">
            <column name="contact_type"/>
        </createIndex>

        <createIndex indexName="idx_contacts_method" tableName="contacts">
            <column name="contact_method"/>
        </createIndex>

        <createIndex indexName="idx_contacts_value" tableName="contacts">
            <column name="value"/>
        </createIndex>

        <createIndex indexName="idx_contacts_primary" tableName="contacts">
            <column name="is_primary"/>
        </createIndex>

        <createIndex indexName="idx_contacts_deleted_at" tableName="contacts">
            <column name="deleted_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>