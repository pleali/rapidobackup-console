<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="001_create_contacts_table" author="console">
        <createTable tableName="contacts">
            <!-- Primary Key -->
            <column name="id" type="${uuidType}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Relation vers tenant (obligatoire) -->
            <column name="tenant_id" type="${uuidType}">
                <constraints nullable="false"/>
            </column>

            <!-- Type de contact -->
            <column name="contact_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_primary" type="boolean" defaultValueBoolean="false"/>

            <!-- Informations personnelles -->
            <column name="salutation" type="varchar(20)"/>
            <column name="first_name" type="varchar(100)"/>
            <column name="middle_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="suffix" type="varchar(20)"/>
            <column name="full_name" type="varchar(255)"/>
            <column name="nickname" type="varchar(100)"/>
            <column name="preferred_name" type="varchar(100)"/>

            <!-- Contact professionnel -->
            <column name="company_name" type="varchar(255)"/>
            <column name="job_title" type="varchar(255)"/>
            <column name="department" type="varchar(255)"/>
            <column name="employee_id" type="varchar(100)"/>
            <column name="division" type="varchar(255)"/>

            <!-- Communications -->
            <column name="email" type="varchar(255)"/>
            <column name="phone_primary" type="varchar(50)"/>
            <column name="phone_secondary" type="varchar(50)"/>
            <column name="phone_mobile" type="varchar(50)"/>
            <column name="fax" type="varchar(50)"/>

            <!-- Adresse -->
            <column name="address_line1" type="varchar(255)"/>
            <column name="address_line2" type="varchar(255)"/>
            <column name="city" type="varchar(100)"/>
            <column name="state_province" type="varchar(100)"/>
            <column name="postal_code" type="varchar(20)"/>
            <column name="country" type="varchar(2)"/>

            <!-- Préférences -->
            <column name="preferred_contact_method" type="varchar(50)"/>
            <column name="preferred_language" type="varchar(10)"/>
            <column name="timezone" type="varchar(50)"/>

            <!-- Consentements GDPR -->
            <column name="marketing_consent" type="boolean" defaultValueBoolean="false"/>
            <column name="newsletter_consent" type="boolean" defaultValueBoolean="false"/>
            <column name="consent_date" type="timestamp"/>

            <!-- Métadonnées -->
            <column name="notes" type="text"/>
            <column name="tags" type="varchar(255)"/>
            <column name="custom_fields" type="jsonb"/>

            <!-- Validation -->
            <column name="email_verified" type="boolean" defaultValueBoolean="false"/>
            <column name="phone_verified" type="boolean" defaultValueBoolean="false"/>
            <column name="verified_at" type="timestamp"/>

            <!-- Timestamps -->
            <column name="created_at" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign Keys -->
        <addForeignKeyConstraint baseColumnNames="tenant_id"
                                 baseTableName="contacts"
                                 constraintName="fk_contacts_tenant"
                                 referencedColumnNames="id"
                                 referencedTableName="tenants"
                                 onDelete="CASCADE"/>

        <!-- Indexes -->
        <createIndex indexName="idx_contacts_tenant_id" tableName="contacts">
            <column name="tenant_id"/>
        </createIndex>

        <createIndex indexName="idx_contacts_type" tableName="contacts">
            <column name="contact_type"/>
        </createIndex>

        <createIndex indexName="idx_contacts_email" tableName="contacts">
            <column name="email"/>
        </createIndex>

        <createIndex indexName="idx_contacts_primary" tableName="contacts">
            <column name="is_primary"/>
        </createIndex>

        <createIndex indexName="idx_contacts_full_name" tableName="contacts">
            <column name="full_name"/>
        </createIndex>

        <createIndex indexName="idx_contacts_employee_id" tableName="contacts">
            <column name="employee_id"/>
        </createIndex>

        <createIndex indexName="idx_contacts_first_last_name" tableName="contacts">
            <column name="first_name"/>
            <column name="last_name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>