<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="005_create_audit_logs_table" author="console">
        <createTable tableName="audit_logs">
            <!-- Primary Key -->
            <column name="id" type="${uuidType}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Tenant Context -->
            <column name="tenant_id" type="${uuidType}">
                <constraints nullable="false"/>
            </column>

            <!-- User Context -->
            <column name="user_id" type="${uuidType}"/>
            <column name="username" type="varchar(100)"/>

            <!-- Event Information -->
            <column name="event_type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="event_category" type="varchar(50)"/>
            <column name="action" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="resource_type" type="varchar(100)"/>
            <column name="resource_id" type="varchar(255)"/>
            <column name="resource_name" type="varchar(255)"/>

            <!-- Event Details -->
            <column name="description" type="text"/>
            <column name="severity" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="result" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <!-- Technical Details -->
            <column name="ip_address" type="varchar(45)"/>
            <column name="user_agent" type="text"/>
            <column name="session_id" type="varchar(255)"/>
            <column name="request_id" type="varchar(255)"/>

            <!-- Data Changes -->
            <column name="old_values" type="jsonb"/>
            <column name="new_values" type="jsonb"/>
            <column name="metadata" type="jsonb"/>

            <!-- Error Information -->
            <column name="error_message" type="text"/>
            <column name="error_code" type="varchar(50)"/>
            <column name="stack_trace" type="text"/>

            <!-- Timestamps -->
            <column name="event_timestamp" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign Key for tenant relationship -->
        <addForeignKeyConstraint baseColumnNames="tenant_id"
                                 baseTableName="audit_logs"
                                 constraintName="fk_audit_log_tenant"
                                 referencedColumnNames="id"
                                 referencedTableName="tenants"/>

        <!-- Foreign Key for user relationship (optional) -->
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="audit_logs"
                                 constraintName="fk_audit_log_user"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>

        <!-- Indexes -->
        <createIndex indexName="idx_audit_logs_tenant" tableName="audit_logs">
            <column name="tenant_id"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_user" tableName="audit_logs">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_event_type" tableName="audit_logs">
            <column name="event_type"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_action" tableName="audit_logs">
            <column name="action"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_severity" tableName="audit_logs">
            <column name="severity"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_result" tableName="audit_logs">
            <column name="result"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_resource" tableName="audit_logs">
            <column name="resource_type"/>
            <column name="resource_id"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_timestamp" tableName="audit_logs">
            <column name="event_timestamp" descending="true"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_ip" tableName="audit_logs">
            <column name="ip_address"/>
        </createIndex>

        <createIndex indexName="idx_audit_logs_session" tableName="audit_logs">
            <column name="session_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>